<p id="notice"><%= notice %></p>

<div class = "container">
	<h1>Areas</h1>
		<table class = "table table-bordered">
			
				<thead>
					<tr class = "info">
						<td width="5%">
							<th>Area name</th>
							<th>Postcode</th>
							<th colspan="3"></th>
					</tr>
				</thead>

	<tbody>
		<% @areas.each do |area| %>
			<tr class="success">
				<td width="5%">
				<td><%= area.area_name %></td>
				<td><%= area.postcode %></td>
				<td><%= link_to 'Show', area %></td>
				<td><%= link_to 'Edit', edit_area_path(area) %></td>
				<td><%= link_to 'Destroy', area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
	</tbody>
	</table>

<br>

<strong><%= link_to 'New Area', new_area_path %></strong>
